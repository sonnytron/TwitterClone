<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/compose_tweet_layout"
              android:orientation="vertical"
              android:layout_gravity="center"
              android:layout_margin="16dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <TextView
        android:text="@string/tweet_compose_title"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_tweet_limit"
        android:text="@string/tweet_char_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_compose_tweet"
        android:hint="@string/tweet_tv_hint"
        android:singleLine="true"
        android:textSize="12dp"
        android:maxLength="140"
        android:imeOptions="actionSend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>